{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "jest.setup.ts",
    "app/**/*",
    "png.d.ts",
    ".eslintrc.js"
  ],
  "extends": "expo/tsconfig.base"
}
