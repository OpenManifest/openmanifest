{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2022",
    "noImplicitAny": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "downlevelIteration": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "jest.setup.ts",
    "app/**/*",
    "png.d.ts",
    "global.d.ts",
    ".eslintrc.js",
    "index.ts",
    "main.ts",
    "build/**/*.ts",
    "patches/deprecated-prop-types.ts"
  ]
}